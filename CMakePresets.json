        },
        {
            "name": "utils_test",
            "hidden": true,
            "cacheVariables": { "APP_NAME": "test/utils" }
        },

        {
            "name": "one_variable_example_gcc_debug",
            "inherits": [ "Debug", "one_variable", "Linux_GCC" ]
        },
        {
            "name": "one_variable_example_gcc_release",
            "inherits": [ "Release", "one_variable", "Linux_GCC" ]
        },
        {
