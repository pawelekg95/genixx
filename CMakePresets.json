{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 21,
        "patch": 0
    },
    "configurePresets": [
        {
          "name": "Debug",
          "hidden": true,
          "cacheVariables": {
            "CMAKE_BUILD_TYPE": "Debug"
          }
        },
        {
          "name": "Release",
          "hidden": true,
          "cacheVariables": {
            "CMAKE_BUILD_TYPE": "Release"
          }
        },
    
        {
          "name": "Linux_GCC",
          "hidden": true,
          "cacheVariables": { "TOOLCHAIN": "gcc" }
        },
        {
          "name": "Linux_Clang",
          "hidden": true,
          "cacheVariables": { "TOOLCHAIN": "clang" }
        },
        
        {
            "name": "one_variable",
            "hidden": true,
            "cacheVariables": { "APP_NAME": "example/one-variable" }
        },
        {
            "name": "two_variables",
            "hidden": true,
            "cacheVariables": { "APP_NAME": "example/two-variables" }
        },

        {
            "name": "individual_test",
            "hidden": true,
